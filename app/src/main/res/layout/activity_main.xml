<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25sdp">

    <TextView
        android:id="@+id/txtnum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:text="Dice Number :   "/>

    <TextView
        android:id="@+id/txtnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:textStyle="bold"
        android:text="Dice Number : "/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        app:cardElevation="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imgdice1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:padding="@dimen/_12sdp"
            android:background="#87B9EF"
            android:src="@drawable/img_5"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            app:cardElevation="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <ImageView
                android:id="@+id/imgdice2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_12sdp"
                android:background="#F17276"
                android:src="@drawable/img"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/txttotalnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:text="Total Number : "/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnroll"
        android:layout_width="@dimen/_105sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_35sdp"
        app:cardBackgroundColor="#F8F7F7"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Dice"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="#4CCB30"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>